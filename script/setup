#!/bin/bash
set -e

if [ ! -f ~/.bashrc.OG ]; then
  echo "backing up ~/.bashrc to ~/.bashrc.OG..."
  cp ~/.bashrc ~/.bashrc.OG
fi

if [ ! -f ~/.zshrc.OG ]; then
  echo "backing up ~/.zshrc to ~/.zshrc.OG..."
  cp ~/.zshrc ~/.zshrc.OG
fi

echo "installing oh my zsh..."
if [ -d ~/.oh-my-zsh ]; then
  echo "it looks like oh my zsh is already installed. doing nothing."
else
  sh -c "$(curl -fsSL https://raw.github.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"
fi

echo "linking .bashrc..."
rm -f ~/.bashrc
ln -sf "$HOME/.dotfiles/.bashrc" ~/.bashrc

echo "linking .zshrc..."
rm -f ~/.zshrc
ln -sf "$HOME/.dotfiles/.zshrc" ~/.zshrc

echo "creating $HOME/src..."
mkdir -p "$HOME/src"
echo "creating $HOME/bractlet..."
mkdir -p "$HOME/bractlet"

echo "installing nvm..."
curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.38.0/install.sh | bash

echo "install latest LTS version of node using nvm..."
export NVM_DIR=$HOME/.nvm;
source $NVM_DIR/nvm.sh;
nvm install --lts

echo "install yarn..."
npm install --global yarn

echo "disable two-finger swipe navigation in google chrome..."
defaults write com.google.Chrome AppleEnableSwipeNavigateWithScrolls -bool FALSE
